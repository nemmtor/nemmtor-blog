{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-idiomatic-order",
    "@ronilaukkarinen/stylelint-a11y/recommended",
    "stylelint-config-prettier"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ]
  }
}
